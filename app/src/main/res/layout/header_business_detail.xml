<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_business_header"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        tools:background="@color/black" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_business_header"
        android:layout_centerInParent="true"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/header_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:shadowColor="#55000000"
            android:shadowDx="6"
            android:shadowDy="6"
            android:shadowRadius="6"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:text="Business Name" />

        <ImageView
            android:id="@+id/header_button_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_favorite_outlined_white" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>